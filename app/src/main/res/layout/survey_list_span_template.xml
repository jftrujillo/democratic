<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="@dimen/left_bar_width"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/left_color_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <ImageView
            android:id="@+id/left_image_categori"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="12dp">

            <RelativeLayout
                android:id="@+id/user_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/list_avatar"
                    android:layout_height="@dimen/list_avatar"

                    />

                <TextView
                    android:id="@+id/user_name_forums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/user_img"
                    android:layout_marginLeft="7dp"
                    android:text="UserName"
                    android:textColor="@color/color_subtitle_forums"
                    android:textSize="@dimen/size_count_coments_forums" />

                <TextView
                    android:id="@+id/categorias_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="categoria"
                    android:textSize="@dimen/size_count_coments_forums"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/contenedor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/user_img2">

                <TextView
                    android:id="@+id/title_forum_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textColor="@color/color_title_foromuns"
                    android:textSize="@dimen/title_forum_size" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contenedor4"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_opcion_survey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votos"
                    android:textColor="@color/color_text_coments_forums"
                    android:textSize="@dimen/text_coments_forums"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/count_coments_forums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_toRightOf="@id/text_opcion_survey"
                    android:textColor="@color/color_count_coments_forums"
                    android:textSize="@dimen/size_count_coments_forums"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/really_small_margin"
                    />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contenedor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_parent">

            <ImageView
                android:id="@+id/img_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/bg_divider" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>