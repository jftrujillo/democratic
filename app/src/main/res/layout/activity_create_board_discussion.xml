<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.kcumendigital.democratic.CreateBoardDiscussion_activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarforo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/count_caracters_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/80"
            android:layout_margin="2dp"
            android:textColor="@color/cardview_light_background"
            android:gravity="center_vertical"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tituloForo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#ffffff"
            android:gravity="center">

            <EditText
                android:id="@+id/discus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo del foro de discusiÃ³n"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:maxLength="80"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</LinearLayout>
