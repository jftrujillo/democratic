<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context="com.kcumendigital.democratic.Fragments.NumberFragmetFragment">


    <ImageView
        android:id="@+id/sombra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_sombra"/>

    <ImageView
        android:id="@+id/bacground_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tituloCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="texto de prueba"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/numberPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center"
        />
</RelativeLayout>
