<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:background="#f6f6f6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:layout_toRightOf="@id/imgPerfil"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="prueba del contenido del texto que va a ir en los comentarios del foro"
                android:textColor="#080101"
                android:layout_below="@id/nombreUsuario"
                android:layout_toRightOf="@id/imgPerfil"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/value_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@id/comment"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/disLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_down_black_18dp"
                android:layout_below="@id/comment"
                android:layout_toLeftOf="@id/value_dislike"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/value_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@id/comment"
                android:layout_toLeftOf="@id/disLike"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_18dp"
                android:layout_below="@id/comment"
                android:layout_toLeftOf="@id/value_like"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>