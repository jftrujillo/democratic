<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kcumendigital.democratic.Fragments.CreateForumFragment">




        <com.android.ex.chips.RecipientEditTextView
            android:id="@+id/recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Agrega los tags de tu foro" />

        <Spinner
            app:theme="@style/SpinnerWhite"
            android:id="@+id/categorias"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/recipient"
            android:layout_margin="10dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/descripcion_foro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categorias">

            <EditText
                android:id="@+id/txtDescDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción Foro de discución"
                android:padding="15dp"
                android:layout_margin="10dp"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/crear_foro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#fdc01f"
            android:text="Aceptar" />

</RelativeLayout>


