<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:id="@+id/container"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgdrawer"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/img_user_nav"
        android:layout_width="@dimen/nav_header_avatar"
        android:layout_height="@dimen/nav_header_avatar"
        android:layout_marginTop="@dimen/margin_medium_image"
        android:layout_marginLeft="@dimen/margin_medium_image"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shadow"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/txt_usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario"
        android:textColor="@color/com_facebook_share_button_text_color"
        android:textSize="@dimen/medium_Letter"
        android:layout_below="@id/img_user_nav"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shapes"
        />
</RelativeLayout>