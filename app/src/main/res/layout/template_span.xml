<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/left_bar_width"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/left_color_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/left_image_categori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/bg_divider"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/contenedor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="12dp">

            <RelativeLayout
                android:id="@+id/relative_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/user_name_forums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/user_img"
                    android:text="UserName"
                    android:textColor="@color/color_subtitle_forums"
                    android:textSize="@dimen/size_count_coments_forums" />

                <TextView
                    android:id="@+id/categorias_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="categoria"
                    android:textSize="@dimen/size_count_coments_forums" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/contenedor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/title_forum_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_img"
                    android:text="Titulo"
                    android:textColor="@color/color_title_foromuns"
                    android:textSize="@dimen/title_forum_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/contenedor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contenedor4"
                android:paddingBottom="14dp">

                <TextView
                    android:id="@+id/text_coments_forums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="comentarios"
                    android:textColor="@color/color_count_coments_forums"
                    android:textSize="@dimen/text_coments_forums" />

                <TextView
                    android:id="@+id/count_coments_forums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/text_coments_forums"
                    android:text="0"
                    android:textColor="@color/color_count_coments_forums"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/contenedor3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_thumb_up_black_24dp" />

                    <TextView
                        android:id="@+id/count_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/min_margin_left"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_count_coments_forums" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="@dimen/min_margin_left"
                        android:layout_toLeftOf="@id/count_dislikes"
                        android:src="@drawable/ic_thumb_down_black_24dp" />

                    <TextView
                        android:id="@+id/count_dislikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/min_margin_left"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="@dimen/size_count_coments_forums" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contenedor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contenedor5">

            <ImageView
                android:id="@+id/img_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/bg_divider" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
