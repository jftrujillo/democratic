<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.kcumendigital.democraticcauca.Fragments.WelcomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#512DA8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_intro"
        android:src="@drawable/democraticmarca" />

    <TextView
        android:id="@+id/text_welcome_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:text="Pantalla Bienvenido"
        android:textColor="#000000"
        android:textSize="@dimen/medium_Letter" />


</LinearLayout>
